<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout"
            android:paddingHorizontal="20dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                tools:src="@tools:sample/avatars"
                tools:layout_conversion_absoluteHeight="200dp"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_conversion_absoluteWidth="411dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="35dp"
                android:paddingTop="15dp"
                tools:layout_conversion_absoluteHeight="47dp"
                tools:layout_editor_absoluteY="200dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_conversion_absoluteWidth="126dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calificación"
                android:paddingTop="15dp"
                tools:layout_conversion_absoluteHeight="19dp"
                tools:layout_editor_absoluteY="247dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_conversion_absoluteWidth="73dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Año creación"
                android:paddingTop="5dp"
                tools:layout_conversion_absoluteHeight="19dp"
                tools:layout_editor_absoluteY="266dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_conversion_absoluteWidth="82dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costo promedio"
                android:paddingTop="5dp"
                tools:layout_conversion_absoluteHeight="19dp"
                tools:layout_editor_absoluteY="286dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_conversion_absoluteWidth="101dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección"
                android:paddingTop="5dp"
                tools:layout_conversion_absoluteHeight="19dp"
                tools:layout_editor_absoluteY="305dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_conversion_absoluteWidth="59dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reseña"
                android:paddingTop="5dp"
                tools:layout_conversion_absoluteHeight="19dp"
                tools:layout_editor_absoluteY="325dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_conversion_absoluteWidth="411dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>